<div class="container col-3 mt-3 text-center">

    <div id="error-div" style="display: none;" class="alert alert-danger" role="alert">
        <p class="alert-heading">Error!</p>
        <p id="error-line"></p>
    </div>
    {{#if msg}}
    <div class="alert alert-success" role="alert">
        <p class="alert-heading">Message!</p>
        <p style="color: inherit;">{{msg}}</p>
    </div>
    {{/if}}
    <h1 class="h3 mb-3 fw-normal">Enter your details to signin!!</h1>

    <form method="POST" action="/login" id="login-form" onsubmit="return validateSignInInputs(event)">
        <label class="sr-only" for="email">email</label>
        <input class="form-control rounded-0" type="text" id="email" name="email" placeholder="email">
        <label class="sr-only" for="password">Password</label>
        <input class="form-control mb-4 rounded-0" type="password" id="password" name="password" placeholder="Password">
        <div class="invalid-feedback mb-3">
            Username and/or passsword cannot be empty
        </div>
        <button type="submit" name="submitButton" id="submitButton" class="btn btn-primary w-100">Sign In</button>

        {{#each errors}}
        <div class="error font-italic" id="errors">{{this}}</div>
        {{/each}}
    </form>

    <a id="No-account" href="/signup">Need to register? Click here to sign-up</a>

    {{#if hasErrors}}
    <p>{{errors}}</p>
  {{/if}}

</div>